{
  "name": "ai_security_helper-backend",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "wrangler dev src/index.ts",
    "deploy": "wrangler deploy --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "test": "vitest",
    "test:api": "vitest run tests/api",
    "test:watch": "vitest watch",
    "dev:test": "wrangler dev --port 8787 & sleep 3 && npm test && pkill -f wrangler",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:migrate:local": "wrangler d1 migrations apply ai_security_db --local",
    "db:studio": "drizzle-kit studio",
    "db:check": "drizzle-kit check",
    "db:push": "drizzle-kit push",
    "db:up": "drizzle-kit up",
    "db:down": "drizzle-kit down"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@hono/zod-openapi": "^1.1.3",
    "@scalar/hono-api-reference": "^0.9.19",
    "drizzle-orm": "^0.44.5",
    "drizzle-seed": "^0.3.1",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.9.8",
    "hono-pino": "^0.10.2",
    "pino": "^9.11.0",
    "pino-pretty": "^13.1.1",
    "stoker": "^2.0.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250926.0",
    "@types/node": "^24.5.2",
    "dotenv": "^17.2.2",
    "drizzle-kit": "^0.31.4",
    "tsx": "^4.20.6",
    "vitest": "^3.2.4",
    "wrangler": "^4.4.0"
  }
}
