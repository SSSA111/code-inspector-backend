{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node", "@cloudflare/workers-types"],
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ESNext"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@config/*": ["config/*"],
      "@types/*": ["types/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx"
  },
  "include": ["src/**/*", "config/**/*", "*.ts"],
  "exclude": ["node_modules", "dist", "migrations"]
}
